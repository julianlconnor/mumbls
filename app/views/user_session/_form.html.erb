<div id="login">
<p class="title"> Login </h1>

<% form_for :user_session, @user_session, :url => { :action => "create" } do |f| %>
	<% if @user_session.errors.any? %>
		<div id='errorExplanation'>
			<h2><%= "#{pluralize(@user_session.errors.count, "error")} prohibited this user from being saved:" %></h2>
			<ul>
			<% @user_session.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
  <table>
	<tr>
  <div class='field'>
		<td><%= f.label :email %></td>
		<td><%= f.text_field :email %></td>
	</div>
  </tr>
  <tr>
	<div class='field'>
		<td><%= f.label :password %></td>
		<td><%= f.password_field :password %></td>
	</div>
  </td>
  </tr>
  <tr>
	<div class='field'>
    <td></td>
		<td><%= f.check_box :remember_me %>
		<%= f.label :remember_me %></td>
	</div>
  </tr>
  <tr>
	<div class='action'>
  <td></td>
	<td><%= f.submit "Login", :class => 'button' %></td>
	</div>
  </tr>
  </table>
<% end %>
</div>
<%= link_to 'Not yet a member?', new_user_path %>
<%= link_to 'Need another activation email?', resend_form_path %>
