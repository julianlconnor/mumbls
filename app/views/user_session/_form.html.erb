<div id = "outside">
  <div id = "left">
    <div id="box">
      <p class="title"> Sign In </p>
      <%= form_for :user_session, @user_session, :url => { :action => "create" } do |f| %>
      <table>
        <tr>          
		      <td><%= f.label :email %></td>
		      <td colspan="2"><%= f.text_field :email %></td>          
        </tr>
        <tr>          
		      <td><%= f.label :password %></td>
		      <td colspan="2"><%= f.password_field :password %></td>                    
        </tr>
        <tr>          
          <td></td>
		      <td><%= f.check_box :remember_me %><%= f.label :remember_me %></td>
        </tr>
        <tr>          
          <td></td>
	        <td><%= f.submit "Login", :class => 'button submission' %></td>
          <td>Forgot Password?<br/>
          <%= link_to 'Need another activation email?', resend_form_path %></td>
        </tr>
      </table>
      <% end %>
    </div> <!-- box end -->
    <% if @user_session.errors.any? %>
    <div id ="box">
      <div class = "bold">Unable to login, please try again</div>
  			<ul>
          <% @user_session.errors.full_messages.each do |msg| %>
          <li class="error"><%= msg %></li>
          <% end %>
        </ul>    
      </div>
    <% end %>
  </div><!-- left end -->
<div id = "left">
  <div id = "box">
    <p class="title"> Not yet a member? </p>
    <%= link_to 'Create an Account', new_user_path %>
  </div>
</div>
<div id = "clear"></div>
</div> <!-- outside end -->
