<!DOCTYPE html>
<html>
<head>
  <title>Mumbls ~</title>
  <%= stylesheet_link_tag "mainstyle.css" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>    
  <div id = "header">
    <div id = "links">
    <%= link_to 'Home', :controller => :home %>
    |
    <% flash.each do |key, msg| %>
	      <%= content_tag :div, msg, :class => [key, " message"], :id => "notice_ #{key}" %>
        <%= content_tag :script, :type => "text/javascript" do -%>
	          setTimeout("new Effect.Fade('notice_<%= key %>');", 15000);
        <% end %>
  	<% end %>
    <% if current_user %>
      Hello <%= current_user.name %> (<%= link_to 'Logout', logout_path, :method => :delete %>)
    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %>  
    </div>
  </div>
  <div id = "line"></div>
  
  <div id = "wrapper">
    <div id = "top_content">
		<div id = "logo">
			<%= link_to 'MUMBLS @ RPI', :controller => :home %>
		</div>
		<div id = "nav">
			<ul>
				<li><%= link_to "Gigs" %></li>
				<li><%= link_to "Jobs" %></li>
				<li><%= link_to "Housing" %></li>
				<li><%= link_to "For Sale", listings_path %></li>
			</ul>
		</div>
    </div>
	<div id = "rpi_pic">
		<%= image_tag "rpi_strip.png" %>
	</div>
    <div id = "middle">
      <%= yield %>
    </div><!-- middle end -->    
    <div id = "clear"></div>
  </div> <!-- wrapper end -->
  
  <div id = "footer">    
  </div>
  
  

</body>
</html>
