<div id = "small_outside">
  <div id = "box" class="small_box">
    <p class="title"><%= @housing.title %>
		<% if !current_user.nil? and current_user.id == @housing.user.id %>
			<%= link_to "Delete", housing_path(@housing.id), :method=>:delete, :class=>"color_button red medium right edit", :confirm=>"Are you sure?"  %>
			<%= link_to 'Edit', edit_housing_path(@housing), :class => "color_button blue medium right edit" -%>
		<% end %>
      <!-- ><h2><%= flash[:notice] %></h2>-->

    <table>
    	<tr>
    		<td>Seller:</td><td><div class="table_text"><%= @housing.user.alias %></div></td>
      </tr>
    	<tr>
    		<td>Title:</td><td><div class="table_text"><%= @housing.title %></div></td>
      </tr>
      <tr>
    		<td>Description:</td><td><div class="table_text"><%= RedCloth.new(@housing.description).to_html.html_safe %></div></td>
      </tr>
    	<tr>
    		<td>Price:</td><td><div class="table_text">$<%= @housing.price %>/month</div></td>
      </tr>
      </tr>
    		<td>Images:</td>
    			<% @housing.housing_images.each do |image| %>
            <td>
    				<%= image_tag image.photo.url(:large), :class => "table_img" %>
            </td>
    			<% end %>
    	</tr>
      <tr><td>Location:</td></tr>
      <tr>
      <td colspan = "2">
        <div id="map" style="width: 547px; height: 320px; border: 1px solid #777; overflow: hidden; margin: 0 auto;"></div>
      </td>
      </tr>
    </table>
  </div>
</div>
<script type="text/javascript">
	<%= show_housing_listing(@address).html_safe %>
</script>