<div id = "middle">
  <div id = "middle_content">   
    <!-- rendering partial for search_bar -->
	<%= form_tag(homesearch_path, :method => 'get') do %>
	  <table>
	        <tr>
	        <td>
				<select name="category_id">
					<option value="all">All</option>
					<option value="listings">Listings</option>
					<option value="housings">Housings</option>
					<% @categories.each do |category| %>
						<option value="<%= category.id %>"><%= category.name %></option>
					<% end %>
				</select>
			</td>
	        <td><%= text_field_tag "searchbar"%></td>
			<td><%= submit_tag("Search") %></td>
	      </tr>
	    </table>
	<% end %>
    
    <div id = "container">
    <p class="title">Categories</p>
    <div id = "categories">
      <ul>
		<li class="subtitle">Items</li>
		<% @items.each do |item| %>
        	<li><%= link_to item.name, "listings/category/#{item.name.downcase.sub('(','').sub(')','').sub(' ','-')}" %></li>
		<% end %>
		<li class="subtitle">Jobs</li>
		<% @jobs.each do |job| %>
        	<li><%= link_to job.name, "jobs/category/#{job.name.downcase.sub('(','').sub(')','').sub(' ','-')}" %></li>
		<% end %>
		<li class="subtitle">Rent</li>
		<% @rent.each do |r| %>
        	<li><%= link_to r.name, "rent/category/#{r.name.downcase.sub('(','').sub(')','').sub(' ','-')}" %></li>
		<% end %>
      </ul>
    </div>
    </div>
    <div id = "content">
      <p class="title">Premium Items</p>
      <div id = "recent_items">
        <% for i in (1..4) %>
          <div class="item"></div>
        <% end -%>
        <div class="bigarrow"></div>
        <div id = "clear"></div>
      </div>

      <p class="title">Recently Added Items</p>
      <div id = "recent_items">
        <% @latest_listings.each do |recent| %>
          <div class="item">
			<% if !recent.listing_images.empty? %>
				<%= image_tag(recent.listing_images.first.photo.url(:small).gsub(' ','%20')) %>
			<% end %>
		  </div>
        <% end -%>
        <div class="bigarrow"></div>
        <div id = "clear"></div>
      </div>

	 <p class="title">For Rent</p>
      <div id = "recent_housings">
        <% @latest_housings.each do |recent| %>
          <div class="item">
			<% if !recent.housing_images.empty? %>
				<%= image_tag(recent.housing_images.first.photo.url(:small)) %>
			<% end %>
		  </div>
        <% end -%>
        <div class="bigarrow"></div>
        <div id = "clear"></div>
      </div>

      <div id = "job_rent">        
         <div id = "recent_rent">
           <p class="title">New Job Listings</p>
           <div id = "listings"></div>
           </div>-
         <div id = "clear"></div>
      </div>

    </div> <!-- content -->
    <div id = "clear"></div>
  </div><!-- middle content -->
  <div id = "clear"></div>

</div><!-- middle end -->    
<div id = "clear"></div>